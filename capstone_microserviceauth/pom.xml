	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.springframework.cloud</groupId>
				<artifactId>spring-cloud-dependencies</artifactId>
				<version>${spring-cloud.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<plugins>
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>0.8.10</version>

				<configuration>
					<excludes>
						<!-- Exclude specific classes or packages -->
						<!--						<exclude>com/example/project/SomeClass*</exclude>-->
						<exclude>org/happiest/capstone_microserviceauth/constant/**</exclude>

					</excludes>
				</configuration>
				<executions>
					<!-- Prepare the agent to collect coverage data during test execution -->
					<execution>
						<id>prepare-agent</id>
						<goals>
							<goal>prepare-agent</goal>
						</goals>
					</execution>

					<!-- Create the coverage report after the tests run -->
					<execution>
						<id>post-unit-test</id>
						<phase>test</phase>
						<goals>
							<goal>report</goal>
						</goals>
						<configuration>
							<!-- Path to store the execution data -->
							<dataFile>target/jacoco.exec</dataFile>
							<!-- Directory for coverage reports -->
							<outputDirectory>target/jacoco-ut</outputDirectory>
						</configuration>
					</execution>

					<!-- Generate the report during the package phase -->
					<execution>
						<id>report</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>report</goal>
						</goals>
					</execution>

					<!-- Configure JaCoCo agent system property -->
					<execution>
						<configuration>
							<systemPropertyVariables>
								<jacoco-agent.destfile>target/jacoco.exec</jacoco-agent.destfile>
							</systemPropertyVariables>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
